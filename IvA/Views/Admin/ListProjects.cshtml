@model IEnumerable<IvA.Models.ProjekteModel>
@{
    ViewData["Title"] = "ListProjects";
}

<h1 style="color: #ffa400 ; margin-bottom:20px"><b>Projektübersicht für Administratoren</b></h1>

<table class="table bg-table" style="table-layout:fixed">
    <thead class="bg-table thead-dark">
        <tr>
            <th scope="col" class="FirstLetter" >
                @Html.DisplayNameFor(model => model.Projektname)
            </th>
            <th scope="col" class="FirstLetter">
                @Html.DisplayNameFor(model => model.Projektersteller)
            </th>
            <th scope="col" class="FirstLetter">
                @Html.DisplayNameFor(model => model.ErstelltAm)
            </th>
            <th scope="col" class="FirstLetter" width="25%">
                @Html.DisplayNameFor(model => model.Beschreibung)
            </th>
            <th scope="col" class="FirstLetter">
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th scope="col" class="FirstLetter">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th scope="col" class="FirstLetter">
                Optionen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Projekte" asp-route-id="@item.ProjekteId" style="word-wrap:break-word ; hyphens:auto">@item.Projektname</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projektersteller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErstelltAm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Projekte" asp-route-id="@item.ProjekteId" class="btn btn-danger">Löschen</a>
            </td>
        </tr>
        }
    </tbody>
</table>