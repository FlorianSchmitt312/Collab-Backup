@model IEnumerable<IvA.Models.ProjekteModel>
@{
    ViewData["Title"] = "ListProjects";
}

<h1>ListProjects</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projektname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projektersteller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErstelltAm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschreibung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Optionen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Projekte" asp-route-id="@item.ProjekteId">@item.Projektname</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projektersteller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErstelltAm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Projekte" asp-route-id="@item.ProjekteId">Löschen</a>
            </td>
        </tr>
        }
    </tbody>
</table>