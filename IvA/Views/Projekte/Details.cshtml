@model ProjekteDetailModel

@{ ViewData["Title"] = "Projektdetails"; }

<h1>Projekt: @Model.Project.Projektname</h1>

<div>
    <h4>Übersicht über die Projektdetails</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Projektowner
        </dt>
        <dd class="col-sm-4">
            @Model.Project.Projektersteller
        </dd>
        <dt class="col-sm-2">
            Erstellt am
        </dt>
        <dd class="col-sm-4">
            @Model.Project.ErstelltAm
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-4">
            @Model.Project.Status
        </dd>
        <dt class="col-sm-2">
            Deadline
        </dt>
        <dd class="col-sm-4">
            @Model.Project.Deadline
        </dd>
        <dt class="col-sm-2">
            Beschreibung
        </dt>
        <dd class="col-sm-4">
            @Model.Project.Beschreibung
        </dd>

    </dl>

    <div style="margin-bottom:20px; margin-top:20px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Project.ProjekteId">Anpassen</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Project.ProjekteId">Projekt löschen</a>
        <a class="btn btn-primary" asp-action="PaketErstellen" asp-route-id="@Model.Project.ProjekteId">Arbeitspaket erstellen</a>
    </div>

    <div class="progress" style="margin-bottom:20px">
        <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.ProjectProgress[0]" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.ProjectProgress[1]" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-info" role="progressbar" style="width: @Model.ProjectProgress[2]" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

</div>
<div class="card-deck" style="margin-bottom:50px">
    <div class="card bg-secondary">
        <div class="card-body">
            <h4 class="card-title">To Do</h4>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Packages)
                {
                    if (item.Status == "To do")
                    {
                        <li class="list-group-item list-group-item-light">
                            <a asp-action="PaketDetails" asp-controller="Projekte" asp-route-id="@item.ArbeitsPaketId">@item.PaketName</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card bg-secondary">
        <div class="card-body">
            <h4 class="card-title">In Bearbeitung</h4>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Packages)
                {
                    if (item.Status == "In Bearbeitung")
                    {
                        <li class="list-group-item list-group-item-light">
                            <a asp-action="PaketDetails" asp-controller="Projekte" asp-route-id="@item.ArbeitsPaketId">@item.PaketName</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="card bg-secondary">
        <div class="card-body">
            <h4 class="card-title">Fertig</h4>
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Packages)
                {
                    if (item.Status == "Fertig")
                    {
                        <li class="list-group-item list-group-item-light">
                            <a asp-action="PaketDetails" asp-controller="Projekte" asp-route-id="@item.ArbeitsPaketId">@item.PaketName</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
<p>
    <h2>Mitglieder</h2>
</p>
<a asp-action="AddUser" asp-route-id="@Model.Project.ProjekteId" asp-controller="Projekte" >Nutzer hinzufügen</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Optionen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectUsers)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Index">Zurück zur Projektübersicht</a>