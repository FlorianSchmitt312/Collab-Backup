@model IvA.Models.ProjekteModel

@{
    ViewData["Title"] = "Projektdetails ändern";
}


<h2>Projektdetails ändern</h2>

<h4 style="padding-bottom:25px ; padding-top:25px">Ändern sie ihre Projektdetails. Passen sie die Beschreibung des Projektes an, fügen sie neuen Projektmitglieder hinzu oder ändern sie den aktuellen Bearbeitungsstatus.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div style="padding-bottom:10px"> Erstellt am: @Model.ErstelltAm</div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjekteId" />

            <div class="form-group">
                <label asp-for="Projektname" class="control-label"></label>
                <input asp-for="Projektname" class="form-control" />
                <span asp-validation-for="Projektname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ErstelltAm" type="hidden" class="form-control" />
                <span asp-validation-for="ErstelltAm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Projektersteller" class="control-label">Projektowner</label>
                <input asp-for="Projektersteller" class="form-control" />
                <span asp-validation-for="Projektersteller" class="text-danger"></span>
            </div>

            <div class="form-group" type="hidden">
                <label asp-for="Mitglieder" class="control-label"></label>
                <input asp-for="Mitglieder" class="form-control" />
                <span asp-validation-for="Mitglieder" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Beschreibung" class="control-label"></label>
                <input asp-for="Beschreibung" class="form-control" />
                <span asp-validation-for="Beschreibung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="To Do">To Do</option>
                    <option value="In Bearbeitung">In Bearbeitung</option>
                    <option value="Fertig">Fertig</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Änderungen speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Projektübersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
