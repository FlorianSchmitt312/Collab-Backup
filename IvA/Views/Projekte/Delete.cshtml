@model IvA.Models.ProjekteModel

@{
    ViewData["Title"] = "Projekt löschen";
}

<h2 style="padding-bottom:25px">Projekt löschen</h2>

<h4 style="padding-bottom:25px">Wollen sie das Projekt wirklich löschen?</h4>
<div>
    <h4>Projektdetails:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Projektname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Projektname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Projektersteller)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Projektersteller)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mitglieder)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mitglieder)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Beschreibung)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Beschreibung)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjekteId" />
        <input type="submit" value="Projekt löschen" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark" style="color: #ffa400">Zurück zur Projektübersicht</a>
    </form>
</div>
