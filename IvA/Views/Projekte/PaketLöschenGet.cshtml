@model IvA.Models.ArbeitsPaketModel

@{ ViewData["Title"] = "Arbeitspaket löschen"; }

<h1>Arbeitspaket löschen</h1>

<h3>Möchten sie dieses Arbeitspaket wirklich löschen?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaketName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaketName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beschreibung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beschreibung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mitglieder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mitglieder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Frist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Frist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="PaketLöschenGet">
        <input type="hidden" asp-for="ArbeitsPaketId" />
        <input type="submit" value="Arbeitspaket löschen" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Projektübersicht</a>
    </form>
</div>
