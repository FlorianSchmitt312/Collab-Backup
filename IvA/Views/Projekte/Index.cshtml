@model IEnumerable<IvA.Models.Projekte>

@{
    ViewData["Title"] = "Projektübersicht";
}
<h2 align="center" class="display-4">Projektdashboard</h2>
<h2 style="padding-top:25px">Behalten sie die Übersicht über ihre Projekte. <br />
    Erstellen und Verwalten sie flexibel Projekte und Arbeitspakete.
</h2>

<p style="padding-top:25px ; padding-bottom: 25px">
    <a asp-action="Create">Neues Projekt erstellen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projektname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projektersteller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErstelltAm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mitglieder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschreibung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@item.Projektname</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projektersteller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErstelltAm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mitglieder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
        }
    </tbody>
</table>

<p style="padding-top : 50px">
    

    <div class="" row>


        <div class="row">
            <div class="col-md-5">

                Projektfortschritt
                <div style="padding:3px" class="text-left">
                    Pflicht Heft
                    <div class="progress" class="text-center">
                        <div class="progress-bar" role="progressbar" style="width: 62%" aria-valuenow="62" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div style="padding:3px" class="text-left">
                    Construction Project
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div style="padding:3px" class="text-left">
                    Develop Project
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div style="padding:3px" class="text-left">
                    FrontEnd
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 5%" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div style="padding:3px" class="text-left">
                    Project
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Termin
                                </th>
                                <th>
                                    Team
                                </th>
                                <th>
                                    Termin Date
                                </th>
                                <th>
                                    Beschreibung
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            ToDo Liste
                            <tr>
                                <td>
                                    Vorbereitung
                                </td>
                                <td>
                                    Gruppe 1
                                </td>
                                <td>
                                    20/05/2020
                                </td>
                                <td>
                                    Der Fortschritt des Pflichtenheft muss vorgelegt werden
                                </td>
                                <td>
                                    offen
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>

</p>
